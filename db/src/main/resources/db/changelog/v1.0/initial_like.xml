<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="createCommentTable" author="Alex">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="like"/>
            </not>
        </preConditions>
        <createTable tableName="like">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="is_deleted" type="boolean"/>
            <column name="author_id" type="uuid"/>
            <column name="time" type="timestamp(6)"/>
            <column name="item_id" type="uuid"/>
            <column name="type" type="varchar(255)" value="('POST','COMMENT')"/>
            <column name="reaction_type" type="varchar(255)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>

